<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_700"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/select_pkf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Select Firebase Private Key File"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pkf_select_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Private Key File is exist"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_pkf"
        tools:visibility="visible" />

    <Button
        android:id="@+id/get_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Get Send FCM Token"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pkf_select_ok" />

    <EditText
        android:id="@+id/firebase_project_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Please input firebase project id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_token" />

    <EditText
        android:id="@+id/input_key_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Please input Key"
        app:layout_constraintEnd_toStartOf="@+id/input_value_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firebase_project_id" />

    <EditText
        android:id="@+id/input_value_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Please input value"
        app:layout_constraintBottom_toBottomOf="@+id/input_key_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/input_key_1"
        app:layout_constraintTop_toTopOf="@+id/input_key_1" />

    <EditText
        android:id="@+id/input_key_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Please input Key"
        app:layout_constraintEnd_toStartOf="@+id/input_value_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_key_1" />

    <EditText
        android:id="@+id/input_value_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Please input value"
        app:layout_constraintBottom_toBottomOf="@+id/input_key_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/input_key_2"
        app:layout_constraintTop_toTopOf="@+id/input_key_2" />


    <EditText
        android:id="@+id/input_key_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Please input Key"
        app:layout_constraintEnd_toStartOf="@+id/input_value_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_key_2" />

    <EditText
        android:id="@+id/input_value_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Please input value"
        app:layout_constraintBottom_toBottomOf="@+id/input_key_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/input_key_3"
        app:layout_constraintTop_toTopOf="@+id/input_key_3" />


    <EditText
        android:id="@+id/input_key_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Please input Key"
        app:layout_constraintEnd_toStartOf="@+id/input_value_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_key_3" />

    <EditText
        android:id="@+id/input_value_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Please input value"
        app:layout_constraintBottom_toBottomOf="@+id/input_key_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/input_key_4"
        app:layout_constraintTop_toTopOf="@+id/input_key_4" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Sned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
